	<script type="text/javascript">
		
		var haut = false
		function slideUp(){
			if(!haut){
				$('#navigation').animate({ top: "-=100%"}, 200 );
				if($('#navigation').is(':animated')){
					checkAnimate();
				}
				haut = true;
			}else{
				$('#conteneurGeneral').animate({ marginLeft: "=0%","width": "-=80%" }, 200 );
				if($('#conteneurGeneral').is(':animated')){
					checkAnimate();
				}
				haut = false;
			}
		}
		
		function checkAnimate() {
            if( $( '#navigation' ).is( ':animated' ) ||  $( '#conteneurGeneral' ).is( ':animated' )) {
                setTimeout(function() {
                    checkAnimate();
                }, 0 );
            }else{
            	if(haut){
            		$('#conteneurGeneral').animate({ marginLeftt: "=20%","width": "=100%" }, 200 );
            	}	
            	else{
            		$('#navigation').animate({ top: "+=100%"}, 200 );
            		
            	}
            }
        }
		
		$( '#boutonHautBas' ).click(function(){
			slideUp()});
	</script>
